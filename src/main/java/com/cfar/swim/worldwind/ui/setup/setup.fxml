<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cfar.swim.worldwind.ui.setup.SetupPresenter">
  <tabs>
    <Tab text="Aircraft">
      <content>
            <VBox prefHeight="400.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="30.0" prefWidth="580.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" prefWidth="180.0" text="Aircraft Type" />
                        <ComboBox fx:id="aircraft" prefHeight="25.0" prefWidth="400.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <!-- Horizontal box created to include description of selected aircraft -->
                  <HBox prefHeight="130.0" prefWidth="580.0">
                     <children>
                     	<Label fx:id="aircraftDescription" alignment="CENTER" contentDisplay="CENTER" wrapText="true"/>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
                  <ScrollPane fx:id="aircraftPropertiesPane" prefHeight="320.0" prefWidth="600.0" />
               </children>
            </VBox>
      </content>
    </Tab>
    <Tab text="Environment">
      <content>
            <VBox prefHeight="400.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="30.0" prefWidth="580.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" prefWidth="180.0" text="Environment Type" />
                        <ComboBox fx:id="environment" prefHeight="25.0" prefWidth="400.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <!-- Horizontal box created to include description of selected environment -->
                  <HBox prefHeight="130.0" prefWidth="580.0">
                     <children>
                     	<Label fx:id="environmentDescription" alignment="CENTER" contentDisplay="CENTER" wrapText="true"/>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
                  <ScrollPane fx:id="envPropertiesPane" prefHeight="320.0" prefWidth="600.0" />
               </children>
            </VBox>
      </content>
    </Tab>
      <!--Tab text="SWIM">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" />
        </content>
      </Tab-->
      <Tab text="Planner">
        <content>
            <VBox prefHeight="400.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="30.0" prefWidth="580.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="25.0" prefWidth="150.0" text="Planner Family " />
                        <ComboBox fx:id="plannerFamily" prefHeight="25.0" prefWidth="82.0" />
                     </children>
                     <children>
                        <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="25.0" prefWidth="100.0" text="Algorithm " />
                        <ComboBox fx:id="planner" prefHeight="25.0" prefWidth="248.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <!-- Horizontal box created to include description of selected planner -->
                  <HBox prefHeight="130.0" prefWidth="580.0">
                     <children>
                     	<Label fx:id="plannerDescription" alignment="CENTER" contentDisplay="CENTER" wrapText="true"/>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
                  <ScrollPane fx:id="plannerPropertiesPane" prefHeight="320.0" prefWidth="600.0" />
               </children>
            </VBox>
        </content>
      </Tab>
      <Tab text="Datalink">
        <content>
            <VBox prefHeight="400.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="30.0" prefWidth="580.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" prefWidth="180.0" text="Datalink Connection" />
                        <ComboBox fx:id="datalink" prefHeight="25.0" prefWidth="400.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <!-- Horizontal box created to include description of selected datalink -->
                  <HBox prefHeight="130.0" prefWidth="580.0">
                     <children>
                     	<Label fx:id="datalinkDescription" alignment="CENTER" contentDisplay="CENTER" wrapText="true"/>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
                  <ScrollPane fx:id="datalinkPropertiesPane" prefHeight="320.0" prefWidth="600.0" />
               </children>
            </VBox>
        </content>
      </Tab>
  </tabs>
</TabPane>

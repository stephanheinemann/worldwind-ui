<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<TitledPane animated="false" text="Timer" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cfar.swim.worldwind.ui.timer.TimerPresenter">
  <content>
      <AnchorPane>
         <children>
            <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ToolBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER">
                    <items>
                      <Button mnemonicParsing="false" onAction="#rewind" text="&lt;&lt;">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#stop" text="Stop">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#track" text="Track">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#play" text="Play">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#fastForward" text="&gt;&gt;">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                    </items>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </ToolBar>
                  <AnchorPane>
                     <children>
                        <Label fx:id="timeLabel" alignment="CENTER" text="Time" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
  </content>
</TitledPane>
